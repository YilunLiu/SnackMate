        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:gravity="center"
        android:text="Rating: 4.9/5"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
